#!/bin/bash

# Agent Manager - Intelligent Subagent Creation System
# This script provides easy access to the agent management system

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CLI_SCRIPT="$SCRIPT_DIR/agent-manager-cli.js"

# Check if Node.js is available
if ! command -v node &> /dev/null; then
    echo "❌ Error: Node.js is required but not installed."
    echo "Please install Node.js (v14+) and try again."
    exit 1
fi

# Check if CLI script exists
if [ ! -f "$CLI_SCRIPT" ]; then
    echo "❌ Error: Agent Manager CLI not found at $CLI_SCRIPT"
    exit 1
fi

# Run the CLI with all arguments
node "$CLI_SCRIPT" "$@"
